<%- include("../partials/header") %>

<div class="container">
	<h1 class="f-Poppins">Edit Comment</h1>
	<div class="t-new-1">
		<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input type="text" name="comment[text]" value="<%= comment.text %>" class="form-control">
			</div>
			<div class="form-group">
				<button class=" btn btn-lg btn-primary btn-block"><b>Submit!</b></button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>

