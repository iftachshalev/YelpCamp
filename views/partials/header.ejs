    	<link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light mb-4 st-nav">
			<div class="container-fluid">
				<div class="navbar-header">
					<a href="/" class="navbar-brand"><b><i class="fas fa-campground t-header-1"></i>YelpCamp</b></a>
				</div>
				<div class="navbar-header">
					<a href="/campgrounds" class="navbar-brand">Camprounds</a>
				</div>
				<div class="collapse navbar-collapse">
					<div class="collapse navbar-collapse">
						<ul class="nav navbar-nav ml-auto">
						<% if(!currentUser) { %>
							<li class="nav-item">
								<a href="/login" class="nav-link on-repet">
									<i class="fas fa-sign-in-alt"></i>
									<b> Login</b>
								</a>
							</li>
							<li class="nav-item">
								<a href="/register" class="nav-link ml-4 on-repet">
									<i class="fas fa-user-plus"></i>
									<b> Sign Up</b>
								</a>
							</li>
						<% } else { %>
							<li class="nav-item mr-5">
								<a href="#" class="nav-link on-repet">
									Signed In As <b><%= currentUser.username %></b>
								</a>
							</li>
							<li class="nav-item mr-1">
								<a href="/logout" class="nav-link ml-4 on-repet">
									<i class="fas fa-sign-out-alt"></i>
									<b> Logout</b>
								</a>
							</li>
						<% }; %>
					</ul>
					</div>
					
				</div>
			</div>
		</nav>
		<div class="container">
			<% if(success && success.length > 0) {%>
				<div class="alert alert-success cenal" role="alert">
					<h6>
						<b><%= success %></b>
					</h6>
				</div>
			<% } %>
			<% if(error && error.length > 0) {%>
				<div class="alert alert-danger cenal" role="alert">
					<h6>
						<b><%= error %></b>
					</h6>
				</div>
			<% } %>
		</div>
