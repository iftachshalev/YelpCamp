<%- include("../partials/header") %>
<div class="container">
	<h1 style="text-align: center; font-family: 'Poppins', sans-serif;">Edit <%= campground.name %></h1>

	<div style="width: 30%; margin: 40px auto;">
		<form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
			<div class="form-group">
				<input type="text" name="name" placeholder="name" class="form-control" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<input type="text" name="image" placeholder="image url" class="form-control" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<input type="text" name="description" placeholder="description" class="form-control" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<button class=" btn btn-lg btn-primary btn-block"><b>Submit!</b></button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>

</div>
<%- include("../partials/footer") %>