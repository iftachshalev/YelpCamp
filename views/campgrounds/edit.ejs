<%- include("../partials/header") %>

<div class="row">
	<h1 class="f-Poppins text-center">Edit <%= campground.name %></h1>
	<div class="col-6 offset-3">
		<form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input type="text" name="name" placeholder="name" class="form-control" value="<%= campground.name %>">
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input type="text" name="image" placeholder="image url" class="form-control" value="<%= campground.image %>">
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Price</label>
				<div class="input-group mb-3">
					<span class="input-group-text">$</span>
					<input type="number"  name="price" placeholder="0.00" class="form-control" min="0" step="0" class="form-control" aria-label="Amount (to the nearest dollar)" value="<%= campground.price %>">
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input type="text" name="location" placeholder="location" class="form-control" value="<%= campground.location %>">
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea type="text" name="description" placeholder="description" class="form-control"><%= campground.name %></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-lg btn-success btn-block"><b>Submit!</b></button>
			</div>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>