<%- include("../partials/header") %>

<div class="container">
	<div class="container">
		<!-- <div class="col-md-3">
			<p class="lead"><b>YelpCamp</b></p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div> -->
		<!-- <div class="col-md-1">
		</div> -->
		<div class="">
			<div class="img-thumbnail no-space">
				<div>
					<img class="mx-auto d-block mb-3 hand-width" src="<%= campground.image %>">
					<div class="ml-3 mr-3">
						<h4 class="rounded float-right">$<%= campground.price %>/night</h4>
						<h4><a href=""><%= campground.name %></a></h4>
						<p class="f-Sansita"><%= campground.description %></p>
						<p class="pb-2">
							<em><b>submited by <a href="#"><%= campground.author.username %></a></b></em>
						</p>
						<% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
							<a href="/campgrounds/<%= campground._id %>/edit" class="float-right btn btn-primary mb-3" style="width: 10%;">Edit</a>

							<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
								<button class="btn btn-danger mb-3">Delete</button>
							</form>
						<% } %>
												
					</div>
					
				</div>
			</div>
			<div class="card card-body bg-light mt-4 mb-3">
				<div class="text-right">
					<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
						<div class="form-group">
							<input type="text" name="comment[text]" placeholder="text" class="form-control">
						</div>
						<div class="form-group">
							<button class=" btn btn-lg btn-primary btn-block"><b>Submit!</b></button>
						</div>
					</form><!-- 
					<a class="btn btn-primary btn-big" href="/campgrounds/<%= campground._id %>/comments/new">Add A Comment</a> -->
					<b><hr class="sp-hr"></b>
				</div>
				<% campground.comments.forEach(function(comment) { %>
					<div class="row">
						<div class="col-md-12">
							<b><%= comment.author.username %></b>
							<span class="float-right">10 days ago</span>
							<p class="f-Sansita">
								<%= comment.text %>
							</p>
							<% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
								<a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
								<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" class="disin">
									<input type="submit" name="" class="btn btn-xs btn-danger" value="Delete">
								</form>
							<% } %>
							<hr>
						</div>		
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>